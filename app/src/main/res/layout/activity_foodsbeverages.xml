<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/backgr"
    tools:context="demo.example.thanhldtse61575.hotelservicetvbox.FoodsBeveragesActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="6"
                    android:background="#504b4e4b">

                    <ExpandableListView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/simpleExpandableListView"
                        android:divider="#fcfafa"
                        android:dividerHeight="1dp"
                        android:listSelector="@drawable/list_selector"
                        android:childDivider="#fbfdfb">
                    </ExpandableListView>

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:background="#50797878"
                    android:scrollbars="vertical">
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="ORDER"
                        android:textAlignment="center"
                        android:textSize="@dimen/text_size_medium"
                        android:layout_gravity="right|top"
                        android:background="@drawable/buttonstyles"
                        android:textColor="#faf8f8"
                        android:textStyle="bold"
                        android:id="@+id/btnOrder"/>
                </FrameLayout>

            </LinearLayout>

            <Space
                android:layout_width="@dimen/activity_vertical_margin"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="7"
                android:layout_height="match_parent">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="9"
                    android:background="#50797878">

                    <GridView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/gridView"
                        android:columnWidth="200dp"
                        android:numColumns="auto_fit"
                        android:stretchMode="columnWidth"
                        android:drawSelectorOnTop="true"
                        android:focusable="true"
                        android:clickable="true"
                        android:scrollbars="vertical"
                        android:layout_gravity="center_horizontal|top" />
                </FrameLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="TOTAL: "
                        android:gravity="center"
                        android:textSize="@dimen/text_size_large"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="$"
                        android:textSize="@dimen/text_size_large"
                        android:id="@+id/txtTotal"
                        android:textColor="@color/red"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_vertical_margin"/>

        <include layout="@layout/layout_roombar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</RelativeLayout>
