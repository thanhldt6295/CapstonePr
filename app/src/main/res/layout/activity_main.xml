                        android:id="@+id/textView2"
                        android:layout_centerInParent="true"
                        android:textSize="26dp"
                        android:textColor="#ffffff" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="10dp"
                android:layout_height="450dp"></RelativeLayout>

            <RelativeLayout
                android:layout_width="250dp"
